@model IEnumerable<medical_appointments.Models.Patient>

@{
    ViewData["title"] = "Pacientes";
}

<h2>Lista de Pacientes</h2>

<div class="row search">
    <div class="col-auto">
        <input type="text" class="form-control-plaintext" id="txt-search" placeholder="Buscar..." />
    </div>
    <div class="col-auto">
        <a class="btn btn-success" onclick="patients_search()" id="search-link"><i class="fas fa-search"></i></a>
        <a asp-action="Create" class="btn btn-success"><i class="far fa-file"></i> Nuevo</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PatientFullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientSurname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientStreetAddress)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PatientFullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PatientSurname)</td>
                    <td>@Html.DisplayFor(modelItem => item.PatientStreetAddress)</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.PatientId"><i class="fas fa-edit"></i> Editar</a>
                        <a asp-action="Details" class="btn btn-success" asp-route-id="@item.PatientId"><i class="fas fa-sticky-note"></i> Detalles</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.PatientId"><i class="fas fa-trash-restore"></i> Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="~/css/common.css" />
<script src="~/js/patient.js" asp-append-version="true"></script>